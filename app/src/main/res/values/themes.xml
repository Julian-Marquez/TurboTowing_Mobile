<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TurboTowingApp" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonBarButtonStyle">@drawable/login_button</item>
    </style>
    <!-- Base application theme. -->

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="backgroundColor">@color/teal_200</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="CustomButton2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="background">@drawable/login_button</item>
        <item name="android:foreground">@android:color/transparent</item>
        <item name="android:foregroundTint">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="textAppearanceButton">@color/teal_200</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="Theme.TurboTowingApp.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TurboTowingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TurboTowingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>